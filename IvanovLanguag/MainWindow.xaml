<Window x:Class="IvanovLanguag.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IvanovLanguag"
        mc:Ignorable="d"
        Title="IvanovLanguage" MinHeight="450" MinWidth="800" Icon="res/school_logo.ico" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Border Background="#FFE7FABF" Grid.Row="0" ></Border>
        <TextBlock Text="ООО Языковая Школа" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Image Source="res/school_logo.png" HorizontalAlignment="Left"></Image>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
